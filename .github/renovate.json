{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["github>Clytage/renovate-config"],
	"baseBranches": ["main"],
	"docker": {
		"enabled": true,
		"packageRules": [
			{
				"enabled": false,
				"matchDatasources": ["docker"],
				"matchUpdateTypes": ["major"]
			}, {
				"enabled": false,
				"matchDatasources": ["docker"],
				"matchPackageNames": ["mariadb", "python"],
				"matchUpdateTypes": ["major", "minor"]
			}
		]
	}
}
